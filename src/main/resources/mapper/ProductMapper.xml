<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.three.zteoa.mapper.ProductMapper">

	<!--查看所有商品 -->
	<select id="getProductList" resultType="Product">
		select p.* from zteoa_product p
		<if test="name!=null and name !=''">name=#{name}</if>
		Order by create_time DESC limit #{currentPageNo},#{pageSize}
	</select>

	<!-- 添加商品 -->
	<insert id="addProduct" parameterType="Product">
		insert into
		zteoa_product(id,category_id,name,price,num,create_time)
		values(#{id},#{categoryId},#{name},#{price},#{num},#{createTime})
	</insert>

	<!--修改商品 -->
	<update id="modifyProduct" parameterType="Product">
		UPDATE zteoa_product
		<trim prefix="set" suffix="where id=#{id}" suffixOverrides=",">
			<if test="name!=null and name!=''">name=#{name},</if>
			<if test="price!=null">price=#{price},</if>
			<if test="num!=null">num=#{num},</if>
			<if test="modify_time!=null and  modify_time!=''">modify_time=#{modifyTime},</if>
		</trim>
	</update>

	<!--删除商品 -->
	<delete id="deleteProduct" parameterType="int">
		delete from
		zteoa_product where id=#{id}
	</delete>

	<!--统计商品数量 -->
	<select id="getCount" resultType="int">
		select num from zteoa_product
		where name=#{name}
	</select>
	
	<!-- 统计商品 -->
	<select id="Count" resultType="int">
		select count(1) from zteoa_product where 1=1
		<if test="name!=null and name!=''"> and name=#{name}</if>
	</select>
	
	<!-- 查询商品类别id -->
	<select id="selectpcById" resultType="ProductCategory">
		select p.*,c.category from zteoa_product p,zteoa_product_category c where
		c.id=p.category_id
		and c.id=#{id}
	</select>
</mapper>